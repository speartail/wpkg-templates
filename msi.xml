<package
  id='&id;'
  name='&name;'
  revision='%PKG_VERSION%-1'
  reboot='false'
  priority='10'
  >

  <variable name='PKG_VERSION' value='&version;' />
  <variable name='PKG_SOURCE' value='&msi_32bit;' architecture='x86' />
  <variable name='PKG_SOURCE' value='&msi_64bit;' architecture='x64' />

  <check type='logical' condition='or'>
    <check type='uninstall' condition='versiongreaterorequal' path='&uninstall_32bit;' value='%PKG_VERSION%' />
    <check type='uninstall' condition='versiongreaterorequal' path='&uninstall_64bit;' value='%PKG_VERSION%' />
  </check>

  <install cmd='msiexec /quiet /norestart /i "%PKG_SOURCE%"'>
    <exit code='3010' reboot='false' />
  </install>
  <upgrade   include='install' />
  <downgrade include='install' />
  <remove cmd='msiexec /quiet /norestart /x "%PKG_SOURCE%"'>
    <exit code='1605' />
    <exit code='3010' reboot='false' />
  </remove>

</package>
